{
  "name": "sparktasks",
  "version": "0.1.0",
  "description": "Storage-neutral, local-first task platform",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:unit -- --maxThreads=2 && npm run test:integration -- --maxThreads=2 && npm run test:e2e",
    "test:unit": "vitest run src",
    "test:integration": "vitest run test/integration",
    "test:e2e": "playwright test test/e2e/*.spec.ts",
    "test:accessibility": "playwright test test/e2e/a5-accessibility-snapshots.spec.ts --project=chromium",
    "test:accessibility:update": "UPDATE_SNAPSHOTS=true playwright test test/e2e/a5-accessibility-snapshots.spec.ts --project=chromium",
    "test:accessibility:debug": "playwright test test/e2e/a5-accessibility-snapshots.spec.ts --project=chromium --debug",
    "test:accessibility:a2": "playwright test test/e2e/a2-task-interactions-accessibility.spec.ts --project=chromium",
    "test:accessibility:a3": "playwright test test/e2e/a3-accessibility-snapshots.spec.ts --project=chromium",
    "test:accessibility:all": "playwright test test/e2e/*accessibility*.spec.ts --project=chromium",
    "test:accessibility:update-all": "UPDATE_SNAPSHOTS=true playwright test test/e2e/*accessibility*.spec.ts --project=chromium",
    "test:coverage": "vitest run --coverage src test/integration",
    "test:watch": "vitest",
    "test:types": "npm run test:unit -- --reporter=verbose",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,css,md,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,css,md,json}",
    "typecheck": "tsc --noEmit",
    "validate": "node tools/run-validators.js",
    "validate:workspace": "node tools/check-workspace-structure.js",
    "validate:ssot": "node tools/validate-ssot.js",
    "precommit": "npm run format:check && npm run lint && npm run typecheck && npm run test:unit"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "lucide-react": "^0.295.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.0",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.5.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.4",
    "typescript": "^5.0.0",
    "vite": "^6.0.1",
    "vitest": "^3.2.4"
  },
  "volta": {
    "node": "18.16.0",
    "npm": "9.5.1"
  }
}
