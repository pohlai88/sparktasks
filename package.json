{
  "name": "sparktasks",
  "version": "0.1.0",
  "description": "Storage-neutral, local-first task platform",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:unit -- --run --coverage && npm run test:integration -- --run && npm run test:e2e:critical",
    "test:unit": "vitest run test/components test/unit src",
    "test:integration": "vitest run test/integration",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage test/components test/unit test/integration src",
    "test:e2e": "playwright test --config=test/e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=test/e2e/playwright.config.ts --ui",
    "test:e2e:critical": "playwright test --config=test/e2e/playwright.config.ts --grep @critical",
    "test:e2e:report": "playwright show-report test-results/e2e-report",
    "test:e2e:debug": "playwright test --config=test/e2e/playwright.config.ts --debug",
    "db:snapshot:create": "node e2e/data/db-setup.js create-snapshot",
    "db:snapshot:restore": "node e2e/data/db-setup.js restore-snapshot",
    "db:reset": "node e2e/data/db-setup.js reset",
    "seed:base": "tsx e2e/data/seed.base.ts",
    "seed:scenario": "tsx e2e/data/run-scenario.ts",
    "test:data-contracts": "tsx e2e/data/seed.contract.test.ts",
    "test:types": "npm run test:unit -- --reporter=verbose",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --cache",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix --cache",
    "lint:report": "eslint \"src/**/*.{ts,tsx}\" -f json -o .eslint-report.json",
    "dead:exports": "ts-prune -p tsconfig.json",
    "dead:files": "knip --production",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,css,md,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,css,md,json}",
    "typecheck": "tsc --noEmit",
    "validate": "node tools/run-validators.cjs",
    "validate:workspace": "node tools/check-workspace-structure.cjs",
    "ssot:scorecard": "npx tsx scripts/scorecard.ts",
    "ssot:help": "echo 'SSOT Commands:\\n  ssot:scorecard - Generate comprehensive component compliance report\\n  tokens:scaffold - Add missing DESIGN_TOKENS\\n\\nThe scorecard method provides complete SSOT analysis and compliance tracking.'",
    "tokens:scaffold": "npx tsx scripts/scaffold-tokens.ts",
    "new": "node scripts/new-component.cjs",
    "precommit": "npm run format:check && npm run lint && npm run typecheck && npm run test:unit",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "lucide-react": "^0.540.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.48.0",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.25.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.5.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.19.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "jsdom": "^23.2.0",
    "knip": "^5.63.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwind-scrollbar": "^2.1.0",
    "tailwind-scrollbar-hide": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-prune": "^0.10.3",
    "tsx": "^4.20.4",
    "typescript": "^5.0.0",
    "vite": "^6.3.0",
    "vitest": "^3.2.4"
  },
  "volta": {
    "node": "18.16.0",
    "npm": "9.5.1"
  }
}
