{
  "name": "sparktasks",
  "version": "0.1.0",
  "description": "Storage-neutral, local-first task platform",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.18.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "node scripts/bundle-analysis-simple.cjs",
    "build:report": "npm run build && npm run build:analyze",
    "build:stats": "vite build --mode production --stats",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:component && npm run test:integration",
    "test:ci": "npm run test:unit -- --run --coverage && npm run test:component -- --run && npm run test:integration -- --run",
    "test:unit": "vitest run tests/unit",
    "test:component": "vitest run tests/components",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:watch:unit": "vitest tests/unit",
    "test:watch:component": "vitest tests/components",
    "test:watch:integration": "vitest tests/integration",
    "test:coverage": "vitest run --coverage tests/unit tests/components tests/integration",
    "test:coverage:unit": "vitest run --coverage tests/unit",
    "test:coverage:component": "vitest run --coverage tests/components",
    "test:coverage:integration": "vitest run --coverage tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:critical": "playwright test --grep @critical",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:visual": "playwright test --grep @visual",
    "test:visual:update": "playwright test --grep @visual --update-snapshots",
    "test:a11y": "playwright test --grep @a11y",
    "test:performance": "playwright test --grep @performance",
    "test:mocking": "playwright test --grep @mocking",
    "test:e2e:report": "playwright show-report test-results/e2e-report",
    "test:e2e:debug": "playwright test --debug",
    "db:snapshot:create": "node tests/e2e/data/db-setup.js create-snapshot",
    "db:snapshot:restore": "node tests/e2e/data/db-setup.js restore-snapshot",
    "db:reset": "node tests/e2e/data/db-setup.js reset",
    "seed:base": "tsx tests/e2e/data/seed.base.ts",
    "seed:scenario": "tsx tests/e2e/data/run-scenario.ts",
    "test:data-contracts": "tsx tests/e2e/data/seed.contract.test.ts",
    "test:types": "npm run test:unit -- --reporter=verbose",
    "lint": "eslint . --ext .ts,.tsx --cache --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --cache --max-warnings=0",
    "lint:changed": "eslint $(git diff --name-only --diff-filter=ACMRTUXB origin/main...HEAD | grep -E '\\.(ts|tsx)$' || true) --cache --max-warnings=0",
    "lint:governance": "eslint src/components/ui-enhanced/**/*.tsx --rule 'no-restricted-syntax:error' --rule 'no-restricted-imports:error'",
    "audit:drift": "npm run lint:governance && npm run typecheck && npm run test:unit",
    "validate:imports": "eslint src/components/ui-enhanced/**/*.tsx --rule 'no-restricted-imports:error'",
    "validate:naming": "eslint src/components/ui-enhanced/**/*.tsx --rule 'no-restricted-syntax:error'",
    "update-exports": "node scripts/update-component-exports.js",
    "lint:report": "eslint \"src/**/*.{ts,tsx}\" -f json -o .eslint-report.json",
    "dead:exports": "ts-prune -p tsconfig.json",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,css,md,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,css,md,json}",
    "typecheck": "tsc --noEmit",
    "validate": "node tools/run-validators.cjs",
    "validate:workspace": "node tools/check-workspace-structure.cjs",
    "verify:drift": "node tools/verify-drift.cjs",
    "verify:all": "npm run verify:drift && npm run format:check && npm run lint && npm run typecheck && npm run test:unit",
    "ssot:check": "npx tsx scripts/scorecard.ts",
    "ssot:scorecard": "npx tsx scripts/scorecard.ts",
    "ssot:help": "echo 'SSOT Commands:\\n  ssot:scorecard - Generate comprehensive component compliance report\\n  tokens:scaffold - Add missing DESIGN_TOKENS\\n\\nThe scorecard method provides complete SSOT analysis and compliance tracking.'",
    "tokens:scaffold": "npx tsx scripts/scaffold-tokens.ts",
    "new": "node scripts/new-component.cjs",
    "precommit": "npm run format:check && npm run lint && npm run typecheck && npm run test:unit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --cache"
    ],
    "*.{css,scss,md,json,yml,yaml,html}": [
      "prettier --write"
    ]
  },
