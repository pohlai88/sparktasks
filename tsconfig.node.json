{
  "comment": "TypeScript Configuration for Node.js Tools - Build and Test Configuration Files",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": [
      "node",
      "vitest/globals",
      "vitest/importMeta"
    ]
  },
  "include": ["vite.config.ts", "vitest.config.ts", "playwright.config.ts"]
}
