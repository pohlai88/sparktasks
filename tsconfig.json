{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,

    /* Testing types */
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "@testing-library/jest-dom"
    ],

    /* Performance */
    "incremental": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@stores/*": ["./src/stores/*"],
      "test/*": ["./test/*"],
      "vitest/*": ["./vitest/*"]
    },

    /* React support */
    "jsx": "react-jsx"
  },
  "include": ["src", "test", "vitest", "vite.config.ts", "vitest.config.ts", "tsup.config.ts"],
  "exclude": ["node_modules", "dist", "coverage", "test-results", "e2e"]
}
