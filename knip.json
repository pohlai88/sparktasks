{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/main.tsx",
    "src/**/*.test.{ts,tsx}",
    "src/**/*.spec.{ts,tsx}",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "project": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.test.{ts,tsx}",
    "!src/**/*.spec.{ts,tsx}",
    "!src/**/*Demo.{ts,tsx}",
    "!src/**/demo/**"
  ],
  "ignore": [
    "dist/**",
    "coverage/**",
    "test-results/**",
    "node_modules/**",
    "**/*.config.{js,ts}",
    "scripts/**",
    "tools/**",
    "e2e/**",
    "examples/**"
  ],
  "ignoreDependencies": [
    "@types/*",
    "husky",
    "lint-staged",
    "prettier-plugin-tailwindcss"
  ]
}
